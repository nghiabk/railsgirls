<div class="row col-sm-12 col-sm-offset-2">
  <div class="col-md-4 col-sm-4">
  <p id="notice"><%= notice %></p>
    <%= image_tag(@idea.picture_url, width: '100%') if @idea.picture.present? %>
    <p class="text-show-name"><b>Name: </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.descriptiontion %></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@idea), class: "btn btn-success btn-custom" %> |
      <%= link_to 'Delete', @idea, data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-danger btn-custom" %> |
      <%= link_to 'Back', ideas_path, class: "btn btn-warning btn-custom" %>
    </p>
  </div>
  <div class="col-md-4 col-sm-8">
  <h3 style="margin-top:10px">Comments</h3>
  <% @comments.each do |comment| %>
  <div class="container">
      <div class="row">
          <div class="col-sm-2">
            <strong><%= comment.user_name %></strong>
            <br />
            <p><%= comment.body %></p>
          </div>
          <div class="col-sm-2"><span class="vote fa fa-arrow-circle-up" style="font-size:27px"></span></div>
      </div>
    <div class="row">
      <div class="col-sm-1">
        <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-comment glyphicon glyphicon-trash" %></p>
      </div>
    </div>
  </div>
  <% end %>
<%= render partial: 'comments/form', locals: { comment: @comment } %>
</div>

</div>

